{
    "name": "mitsuha",
    "version": "2.4.0-1.2",
    "main": "dist/Mitsuha.mjs",
    "os": [
        "!win32",
        "!darwin"
    ],
    "imports": {
        "#lib/*": "./dist/lib/*",
        "#root/*": "./dist/*",
        "#builders/*": "./dist/lib/builders/*",
        "#handlers/*": "./dist/lib/handlers/*",
        "#utils/*": "./dist/lib/utils/*"
    },
    "scripts": {
        "build": "tsc -b .",
        "build:rollup": "yarn build && rollup dist/Mitsuha.js --file dist/Mitsuha.mjs --format esm",
        "watch": "tsc -b . -W",
        "lint": "yarn lint:pretty && yarn lint:eslint",
        "lint:pretty": "prettier . -w",
        "lint:eslint": "eslint --fix src --ext ts",
        "start:dev": "nodemon --unhandled-rejections=strict --es-module-specifier-resolution=node .",
        "start:production": "yarn refresh:rollup && pm2 start dist/Mitsuha.mjs --node-args='--es-module-specifier-resolution=node'",
        "start": "pm2 start dist/Mitsuha.mjs --node-args='--es-module-specifier-resolution=node'",
        "refresh": "rm -rf dist && yarn build",
        "refresh:rollup": "rm -rf dist && yarn build:rollup",
        "stop": "pm2 stop Mitsuha"
    },
    "repository": "https://github.com/ayannw/mitsuha.git",
    "author": "ayannw <ayanispro420@gmail.com>",
    "license": "MIT",
    "type": "module",
    "engines": {
        "node": ">=14"
    },
    "devDependencies": {
        "@types/express": "^4.17.11",
        "@types/glob": "^7.1.3",
        "@types/node": "^14.14.37",
        "@types/node-fetch": "^2.5.9",
        "@types/ws": "^7.4.0",
        "@typescript-eslint/eslint-plugin": "^4.20.0",
        "@typescript-eslint/parser": "^4.21.0",
        "eslint": "^7.23.0",
        "esm": "^3.2.25",
        "nodemon": "^2.0.7",
        "pm2": "^4.5.6",
        "prettier": "^2.2.1",
        "rollup": "^2.47.0",
        "typescript": "^4.2.3"
    },
    "dependencies": {
        "@sapphire/discord.js-utilities": "^1.5.4",
        "@sapphire/stopwatch": "^1.0.6",
        "@sapphire/time-utilities": "^1.2.12",
        "@sapphire/type": "^1.1.7",
        "@sapphire/utilities": "^1.4.6",
        "color-convert": "^2.0.1",
        "colorette": "^1.2.2",
        "cors": "^2.8.5",
        "discord-api-types": "^0.18.1",
        "discord.js": "discordjs/discord.js",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "fastest-levenshtein": "^1.0.12",
        "glob": "^7.1.6",
        "i18n-iso-countries": "^6.7.0",
        "node-fetch": "^2.6.1",
        "validate-color": "^2.1.1"
    }
}
