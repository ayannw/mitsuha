{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "src",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "paths": {
      "#root/*": ["./*"],
      "#lib/*": ["./lib/*"],
      "#types/*": ["./lib/types/*"],
      "#utils/*": ["./lib/utils/*"],
      "#handlers/*": ["./lib/handlers/*"],
      "#builders/*": ["./lib/builders/*"]
    }
  },
  "include": ["src"]
}
