{
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": "src",
        "downlevelIteration": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": false,
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "paths": {
            "#root/*": ["./*"],
            "#lib/*": ["./lib/*"],
            "#types/*": ["./lib/types/*"],
            "#utils/*": ["./lib/utils/*"],
            "#handlers/*": ["./lib/handlers/*"],
            "#builders/*": ["./lib/builders/*"]
        }
    },
    "include": ["src"]
}
